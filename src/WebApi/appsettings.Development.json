{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Database": {
    "Provider": "Sqlite",
    "EnableSensitiveDataLogging": true
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=contractintel.db"
  },
  "Storage": {
    "RootPath": "storage"
  },
  "RiskScoring": {
    "MissingRequiredClauseWeight": 15,
    "AutoRenewShortNoticeWeight": 25,
    "ShortNoticeDays": 30
  }
}
