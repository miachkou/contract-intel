{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/WebApi/WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Run Backend (Watch)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/WebApi/WebApi.csproj",
        "--launch-profile",
        "http"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": {
        "base": "$msCompile",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^dotnet watch.*(Building|Hot reload)",
          "endsPattern": "^\\s*Now listening on:\\s+https?://\\S+"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "Run Frontend (Dev Server)",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/webapp"
      },
      "group": "none",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE v[0-9]+\\.[0-9]",
          "endsPattern": "^\\s*âžœ\\s+Local:\\s+https?://\\S+"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "Run Backend + Frontend",
      "dependsOn": [
        "Run Backend (Watch)",
        "Run Frontend (Dev Server)"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
